<html lang="en">
    <head>
        <title>Search</title>
        <%-include("fontLinks")-%>
        <link href="css/style.css" rel="stylesheet" type="text/css">
    </head>
    <body class="hcar-body">
        <%-include("header")-%>
        <form method="post" action="/results">
        <div id="searchContainer">
                <div id="firstNameFilter">
                    <label for="firstName">First Name</label> <br />
                    <input type="text" class="searchField" id="firstName" placeholder="First" />
                </div>
                <div id="lastNameFilter">
                    <label for="lastName">Last Name</label> <br />
                    <input type="text" class="searchField" id="lastName" placeholder="Last" />
                </div>
                <div id="phoneFilter">
                    <label for="phoneNumber">Phone Number</label> <br />
                    <input type="text" class="searchField" id="phoneNumber" placeholder="0123456789" />
                </div>
                <div id="birthDateFilter">
                    <label for="birthDate">Birthdate</label> <br />
                    <input type="date" class="searchField" id="birthDate" />
                </div>
                <!-- Additional Fields with More Options -->
                <div id="sexTypeFilter" class="hidden">
                    <label for="sex">Sex</label> <br />
                    <select class="searchField" id="sex">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div id="maritalStatusFilter" class="hidden">
                    <label for="maritalStatus">Marital Status</label> <br />
                    <select class="searchField" id="maritalStatus">
                        <option value="single">Single</option>
                        <option value="married">Married</option>
                        <option value="divorced">Divorced</option>
                        <option value="widowed">Widowed</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div id="emailFilter" class="hidden">
                    <label for="email">Email</label> <br />
                    <input type="text" class="searchField" id="email" placeholder="None"/>
                </div>
                <div id="payeeFilter" class="hidden">
                    <label for="payee">Payee</label> <br />
                    <input type="text" class="searchField" id="payee" placeholder="None"/>
                </div>
                <div id="conservatorFilter" class="hidden">
                    <label for="conservator">Conservator</label> <br />
                    <input type="text" class="searchField" id="conservator" placeholder="None"/>
                </div>
                <div id="labelFilter" class="hidden">
                    <label for="label">Label</label> <br />
                    <input type="text" class="searchField" id="label" placeholder="None"/>
                </div>
                <button id="moreOptions" class="searchField" type="button">
                    <span id="buttonText"> More Options </span>
                    <img id="optionsIcon" src="icons/chevron-double-down.svg" />
                </button>
            
        </div>
        <div id="searchSubmitContainer">
            <input type="submit" id="searchSubmit" />
        </div>
        </form>
        <script src="../js/searchScript.js"></script>
    </body>
</html>